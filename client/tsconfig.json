{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "types": ["vite/client", "jest", "node"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "src/**/*.json"],
  "exclude": ["dist", "node_modules", "tests", "vite.config.ts", "playwright.config.ts"]
}

